{
  "name": "sfdx-merge-driver",
  "version": "0.0.0",
  "description": "git merge driver specific for Salesforce.com Metadata",
  "bin": "index.js",
  "main": "index.js",
  "files": [
    "*.js",
    "sfdx-merge-driver.1",
    "/lib",
    "/conf"
  ],
  "man": "./sfdx-merge-driver.1",
  "scripts": {
    "docs": "tail -n +2 README.md | marked-man --manual 'User Commands' --version \"$npm_package_name@$npm_package_version\" > sfdx-merge-driver.1",
    "prerelease": "yarn test",
    "postrelease": "npm publish && git push --follow-tags",
    "pretest": "standard",
    "release": "standard-version",
    "test": "tap -J --coverage test/*.js"
  },
  "repository": "https://github.com/jayree/sfdx-merge-driver",
  "keywords": [
    "sfdx",
    "salesforce",
    "metadata",
    "git",
    "merge",
    "driver",
    "conflict",
    "merge conflict",
    "resolve conflict"
  ],
  "author": "jayree @jayree",
  "license": "ISC",
  "dependencies": {
    "mkdirp": "^0.5.1",
    "shelljs": "0.8.3",
    "xml2js": "0.4.22",
    "yargs": "^15.0.2"
  },
  "devDependencies": {
    "eslint": "6.6.0",
    "eslint-config-standard": "14.1.0",
    "eslint-plugin-import": "2.18.2",
    "eslint-plugin-node": "10.0.0",
    "eslint-plugin-promise": "4.2.1",
    "eslint-plugin-standard": "4.0.1",
    "husky": "^3.1.0",
    "lint-staged": "^9.4.3",
    "marked": "0.7.0",
    "marked-man": "^0.7.0",
    "nyc": "^14.1.1",
    "prettier-standard": "^15.0.1",
    "standard": "^14.3.1",
    "standard-version": "^7.0.1",
    "tap": "^14.9.2"
  },
  "config": {
    "nyc": {
      "exclude": [
        "node_modules/**",
        "test/**"
      ]
    }
  },
  "lint-staged": {
    "*.js": [
      "prettier-standard",
      "git add"
    ]
  },
  "bundleDependencies": [
    "yargs",
    "mkdirp"
  ],
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
